    }

    .contact-item {
        display: flex;
        align-items: top;
        gap: 10px;
    }

    .contact-details p {
        margin: 0;
        font-size: 16px;
    }

    .contact-item h2 {
        margin: 0;
        font-size: 18px;
        font-weight: bold;
    }

    #email-icon {
        font-size: 24px;
        color: #000;
    }

    .fas.fa-phone {
        font-size: 24px;
